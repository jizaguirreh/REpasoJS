
@{
    ViewBag.Title = "Index";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />


<h2>Alumnos</h2>
<label>Seleccione Sexo</label>
<select id="cboSexo"></select>

<input type="button" id="btnBuscar" value="Buscar" class="btn btn-success" />
<input type="button" id="btnLimpiar" value="Limpiar" class="btn btn-primary" />
<br />
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>

<div id="tabla">

</div>

<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80;margin:auto">
                    <tr>
                        <td width="40%">Id Alumno</td>
                        <td width="60%"><input type="text" id="txtIdAlumno" readonly /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Nombre</td>
                        <td><input type="text" id="txtaNombre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Apellido Paterno</td>
                        <td><input type="text" id="txtaPaterno" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Apellido Materno</td>
                        <td><input type="text" id="txtaMaterno" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Sexo</td>
                        <td><select id="cboSexoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Ingrese Fecha Nacimiento</td>
                        <td><input type="text" id="dtFechaNacimiento" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono Padre</td>
                        <td><input type="number" id="txttelefonoPadre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono Madre</td>
                        <td><input type="number" id="txttelefonoMadre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Numero Hermanos</td>
                        <td><input type="text" id="txtnumeroHermanos" /></td>
                    </tr>
                    @*<tr>
                        <td>Ingrese fecha Inicio</td>
                        <td><input class="borrar obligatorio" id="datepickerInicio" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese fecha fin</td>
                        <td><input class="borrar obligatorio" id="datepickerFin" type="text" /></td>
                    </tr>*@

                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Alumno.js"></script>
<script src="~/Scripts/datatables.min.js"></script>

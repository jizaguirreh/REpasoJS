
@{
    ViewBag.Title = "Docente";
}

<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h2>Docente</h2>
<label>Ingrese modalidad contrato</label>
<select id="cboTipoModalidad"></select>

<br />
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>
    
<div id="tabla">

</div>

<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">Id Docente</td>
                        <td width="60%"><input type="text" id="txtIdDocente" readonly /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Nombre</td>
                        <td><input type="text" id="txtNombre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Apellido Paterno</td>
                        <td><input type="text" id="txtaPaterno" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Apellido Materno</td>
                        <td><input type="text" id="txtaMaterno" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Direccion</td>
                        <td><input type="text" id="txtdireccion" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono Fijo</td>
                        <td><input type="number" id="txttelefonoFijo" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono Celular</td>
                        <td><input type="number" id="txttelefonoCelular" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Email</td>
                        <td><input type="email" id="txtemail" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Sexo</td>
                        <td><select id="cboSexoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Ingrese Fecha Contrato</td>
                        <td><input type="text" id="dtFechaContrato" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Nodalidad Contrato</td>
                        <td><select id="cboModalidadContratoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Ingrese Foto</td>
                        <td><img id="imgFoto" width="150" height="100" style="border:1px solid"/></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Docente.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>